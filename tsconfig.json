{
	"extends": "@abhijithvijayan/tsconfig",
	"compilerOptions": {
		/* Let Vite control the final JS output */
		"target": "ESNext",
		"module": "ESNext",
		"noEmit": true,

		"lib": [
			"dom",
			"dom.iterable",
			"ES2023"
		],

		/* Bundler-specific settings */
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"declaration": false,

		/* React JSX transform */
		"jsx": "react-jsx"
	},
	"include": [
		"source"
	]
}